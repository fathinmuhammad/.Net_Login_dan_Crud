@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<h3 class="form-title">Sign In</h3>

@using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new { id = "form-login", role = "form" }))
{
    <!-- BEGIN LOGIN FORM -->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input class="fadeIn second" type="text" autocomplete="off" placeholder="Username" name="username" required />

    <input class="fadeIn third" type="password" autocomplete="off" placeholder="Password" name="password" required />

    <div class="form-actions">
        <input type="submit" class="fadeIn fourth" value="Log In">
    </div>
    <!-- END LOGIN FORM -->
}

<div id="formFooter">
    <div class="copyright"> @DateTime.Now.Year &copy; Test Fathin Muhammad Fadhlullah </div>
</div>
